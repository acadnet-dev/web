@model CreateCourseViewModel

@{
    ViewData["Title"] = "Create course";
}

<section class="page-header -type-1 mt-90">
  <div class="container">
    <div class="page-header__content">
      <div class="row">
        <div class="col-auto">
          <div data-anim="slide-up delay-1">
            <h1 class="page-header__title">Create course</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="layout-pt-md layout-pb-md">
  <div data-anim="slide-up delay-2" class="container">
    <div class="row y-gap-20 items-center justify-between pb-30">
      <div class="col-auto">
        <form class="contact-form y-gap-30" asp-action="Create" method="post">
          <div class="form-group">
            <label asp-for="Name" class="text-16 lh-1 fw-500 text-dark-1 mb-10"></label>
            <input asp-for="Name" placeholder="Name">
            <span asp-validation-for="Name" class="text-red-1"></span>
          </div>
          <div class="form-group">
            <label asp-for="Description" class="text-16 lh-1 fw-500 text-dark-1 mb-10"></label>
            <textarea asp-for="Description" placeholder="Description"></textarea>
            <span asp-validation-for="Description" class="text-red-1"></span>
          </div>
          @Html.AntiForgeryToken()
          <button class="button -md -dark-1 text-white -icon" type="submit">Create course
            <i class="fas fa-check ml-10"></i>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>